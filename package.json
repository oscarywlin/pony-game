        "@vitejs/plugin-react": "^4.2.1",
        "@vitest/coverage-v8": "^4.0.18",
        "autoprefixer": "^10.4.18",
        "gh-pages": "^6.3.0",
        "jsdom": "^28.1.0",
        "postcss": "^8.4.35",
        "tailwindcss": "^3.4.1",
